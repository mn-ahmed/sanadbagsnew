<odoo>
  <data>
    <!-- explicit list view definition -->

   <record id="purchase_order_reference_id" model="ir.ui.view">
          <field name="name">Purchase Ref No Hide</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='partner_ref']" position="attributes">
                 <attribute name="attrs">{'invisible': [('state', 'in', ['draft','purchase'])]}</attribute>
              </xpath>
          </field>
    </record>
          <record id="changing_in_vendor_bill" model="ir.ui.view">
          <field name="name">Changing in Vendor Bill</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="string">Invoice #</attribute>
            </xpath>
              <xpath expr="//field[@name='ref']" position="attributes">
                  <attribute name="class">text-uppercase</attribute>
              </xpath>
               <xpath expr="//field[@name='ref']" position="attributes">
                 <attribute name="attrs">{'readonly': [('state', '=', 'posted')]}</attribute>
              </xpath>
          </field>
    </record>
  </data>
</odoo>