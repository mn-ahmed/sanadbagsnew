<odoo>

	<record id="view_advance_payment_wizard_form" model="ir.ui.view">
		<field name="name">Advance Payment wizards</field>
		<field name="model">advance.payment.wizard</field>
		<field name="arch" type="xml">
			<form >
				<group>
<!--					<label string="Advance Amount" for="amount"/>-->
					<label string="Order Amount" for="order_amount"/>
					<div class="o_row">
						<field name="order_amount" readonly="1"/>
						<field name="currency_id" readonly="1" invisible="1"/>
					</div>
				</group>
				<group col="4">
					<field name="journal_id" required="1"/>
					<field name="payment_method_id" required="1" invisible="1"/>
<!--						<field name="branch_id" />-->
					<field name="user_id" readonly="1" string="Purchase Person" invisible="1"/>
					<field name="amount"/>
					<field name="wiz_date"/>
					<field name="memo"/>
					<field name="wiz_description" invisible="1"/>
					<field name="cheque_no" invisible="1"/>
					<field name="ref" readonly="1"/>
					<field name="paid_by" invisible="1"/>
					<field name="received_by" invisible="1"/>
					<field name="approved_by" invisible="1"/>
				</group>
				<footer>
					<button name="create_data" string="Apply" type="object" class="btn-primary"/>
					<button  string="Cancel" type="object" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

</odoo>
