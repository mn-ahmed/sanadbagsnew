<odoo>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_rfq_send']" position="after">
                <button string="Advance Payment" type="object" class="oe_highlight" name="action_register_payment" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-euro"  type="object" name="action_show_payments" >
                    <field name="payment_count" string="Advance Pay" widget="statinfo"/>
                </button>
            </xpath>
             <xpath expr="//field[@name='amount_untaxed']" position="after">
                 <field name="advance_payment" string="Advance Payment" />
            </xpath>
        </field>
    </record>
<!--attrs="{'invisible': ['|',('state', '!=', 'draft'), ('company_id', '!=', 24)]}"-->
<!--    attrs="{'invisible': [('company_id', '!=', 24)]}"-->
<!--    attrs="{'invisible': [('company_id', '!=', 24)]}"-->
    <record model="ir.ui.view" id="account_move_form_inherit">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="advance_payment"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="account_payment_form_inh">
        <field name="name">account.payment.form.inh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="wiz_description" />
                <field name="cheque_no" />
                <field name="paid_by" />
                <field name="received_by" />
                <field name="approved_by" />
                <field name="po_number" />
            </xpath>
        </field>
    </record>

</odoo>
