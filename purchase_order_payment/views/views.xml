<odoo>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_rfq_send']" position="after">
                <button name="action_register_payment"
                        string="Advance Payment"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'purchase')]}"
                />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_show_payments"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-euro"
                        attrs="{'invisible': [('state', '!=', 'purchase')]}">
                    <field name="payment_count" string="Advance Pay" widget="statinfo"/>
                </button>
            </xpath>
             <xpath expr="//field[@name='amount_untaxed']" position="after">
                 <field name="advance_payment" string="Advance Payment" />
            </xpath>
        </field>
    </record>

<!--    attrs="{'invisible': [('company_id', '!=', 24)]}"-->
<!--    attrs="{'invisible': [('company_id', '!=', 24)]}"-->
    <record model="ir.ui.view" id="account_move_form_inherit">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="advance_payment"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="account_payment_form_inh">
        <field name="name">account.payment.form.inh</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="wiz_description" invisible="1"/>
                <field name="cheque_no" invisible="1"/>
                <field name="paid_by" invisible="1"/>
                <field name="received_by" invisible="1"/>
                <field name="approved_by" invisible="1"/>
                <field name="po_number" invisible="1"/>
                <field name="memo" />
            </xpath>

<!--            For V14 1st Xpath-->
<!--            <xpath expr="//field[@name='ref']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->

<!--            For V13 2nd Xpath-->
            <xpath expr="//field[@name='communication']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>
