<odoo>

    <record id="group_requisition_user" model="res.groups">
        <field name="name">Requisition User</field>
    </record>
    <record id="group_requisition_own_documents" model="res.groups">
        <field name="name">Requisition Own Documents</field>
    </record>
    <record id="group_requisition_general_manger" model="res.groups">
        <field name="name">General Manager For Requisition</field>
    </record>
    <record id="requisition_own_documents_record_rule" model="ir.rule">
        <field name="name">Requisition Own Documents</field>
        <field name="model_id" ref="material_purchase_requisitions.model_material_purchase_requisition"/>
        <field name="domain_force">
            [('employee_id.user_id','=',user.id)]
        </field>
        <field name="groups" eval="[
                (4, ref('tabeer_requisition_sanad.group_requisition_own_documents'))
            ]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="requisition_all_documents_record_rule" model="ir.rule">
        <field name="name">Requisition all Documents</field>
        <field name="model_id" ref="material_purchase_requisitions.model_material_purchase_requisition"/>
        <field name="domain_force">
            [(1,'=',1)]
        </field>
        <field name="groups" eval="[
                (4, ref('tabeer_requisition_sanad.group_requisition_general_manger'))
            ]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <!--        group_purchase_requisition_department-->

    <record id="requisition_department_documents_record_rule" model="ir.rule">
        <field name="name">Requisition Department Documents</field>
        <field name="model_id" ref="material_purchase_requisitions.model_material_purchase_requisition"/>
        <field name="domain_force">
            [('department_id', '=', user.department_id.id)]
        </field>
        <field name="groups" eval="[
                (4, ref('material_purchase_requisitions.group_purchase_requisition_department'))
            ]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="material_purchase_requisitions.purchase_requisition_all_rule" model="ir.rule">
        <field name="name">Material Purcahse Requisitions All</field>
        <field name="active" eval="False"/>
    </record>

    <record id="material_purchase_requisitions.purchase_requisition_own_rule" model="ir.rule">
        <field name="name">Employee Material Purchase Requistion Own</field>
        <field name="active" eval="False"/>
    </record>

    <record id="material_purchase_requisitions.purchase_requisition_line_employee_rule" model="ir.rule">
        <field name="name">Employee Material Purchase Requistion Lines</field>
        <field name="active" eval="False"/>
    </record>
</odoo>